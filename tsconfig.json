{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "types": [
      "node",
      "inversify",
      "reflect-metadata",
      "mocha"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "types/eim.d.ts",
    "eim"
  ]
}
